</html>
<script>
	const barraMenu = document.getElementById('aspa');
	const menu = document.getElementById('submenu');
	barraMenu?.addEventListener('click', () => {
		menu?.classList.toggle('submenu--show');

	} );
</script>
<style>
	body{
		font-family: 'Poppins', sans-serif;
		background-color: #e7f0ff;
		margin: 0;
	}
	nav{
		width: 80%;
		height: 96px;
		align-items: center;
		margin: auto;
		display: flex;
		justify-content: space-between;
	}
	.conteLogo{
		width: 20%;
		display: flex;
		color: #2AA8FF;
	}
	.logo{
		display: flex;
		align-items: center;

	}
	.conteLogo span{
		padding: 0 5px;
		font-size: 18px;
		font-weight: bolder;
	}
	.submenu{
		width: 80%;
		display: flex;
		justify-content: space-around;
	}
	.submenu div a{
		text-decoration: none;
		color: #000000;
	}

	/*FOOTER*/
	footer{
		width: 100%;
		padding: 30px 0;
		background-color: #1b3c74;
	}
	.contenedor{
		width: 80%;
		margin: auto;
	}
	.submenuFooter{
		display: flex;
		justify-content: space-between;
	}
	.submenuFooter .submenuF ul li{
		color: #ffffff;
		margin: 20px 0;
		list-style: square;
	}
	.submenuFooter .direccion p{
		color: #ffffff;

	}
	.logoFooter{
		width: 20%;
		display: flex;
		color: #2AA8FF;
		align-items: center;
	}
	.logoFooter span{
		padding: 0 5px;
		font-size: 18px;
		font-weight: bolder;
	}
	.aspa{
		display: none;
	}
	@media screen and (max-width: 1050px){
		nav{
			width: 100%;
			height: auto;
			position: fixed;
			z-index: 3;
			flex-direction: column;
			background-color: #fafbfe;
		}
		.aspa{
			display: block;
			cursor: pointer;
		}
		.conteLogo{
			width: 95%;
			padding: 2.5%;
			justify-content: space-between;
		}
		.submenu{
			display: none;
			width: 100%;
			z-index: 3;
			flex-direction: column;
			text-align: center;
			background-color: #fafbfe;
		}
		.submenu div{
			padding: 30px 0;
			font-size: 25px;
		}
		.submenu div:hover{
			background-color: #eef8ff;
		}

		.submenu--show{
			animation: apa 2s ;
			z-index: 0;
			display: block;
		}

		@keyframes apa {
        from {
            opacity: 0;
            transform: translateY(-30%);
        }
        to {
            opacity: 1;
        }
    }
		

		/*FOOTER*/
		.logoFooter{
			width: 100%;
			justify-content: center;
		}
		.submenuFooter{
			flex-wrap: wrap;
			justify-content: space-evenly;
		}

	}

</style>
