<style>
    section{
        width: 80%;
        margin: auto;
        position: absolute;
        right: 0;
        left: 0;
        top:65%;
        padding: 50px 0 5px 0;
        background-color: #ffffff;
        border-radius: 20px;
        filter: drop-shadow(
            0 0 10px rgba(0, 0, 0, .2)
        );
    }
    .busquedas{
        width: 90%;
        margin: auto;
        display: flex;
        justify-content: space-between;
    }
    .busqueda{
        width: 250px;
        height: 50px;
        padding: 0 20px;
        display: flex;
        align-items: center;
        background-color: #fafbfe;
        border-radius: 10px;
    }
    .busqueda span{
        padding: 0 10px;
        color: #ABB6C7;
    }
    .location{
        width: 300px;
        height: 50px;
        padding: 0 20px;
        display: flex;
        align-items: center;
        background-color: #fafbfe;
        border-radius: 10px;
    }
    .location span{
        padding: 0 10px;
        color: #ABB6C7;
    }
    .btn{
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .selectivos{
        width: 90%;
        margin: 70px auto;
        text-align: center;
    }
    .selectivos .titulo{
        font-size: 20px;
        margin: 10px 0;
        font-weight: 600;
    }
    .conteSelect{
        display: flex;
        justify-content: space-between;
        margin: 30px 0 0 0;
    }
    .conteSelect span{
        font-weight: 600;
        color: #abb6c7;
    }
    @media screen and (max-width: 1050px){
        section{
            position: relative;
            width: 95%;
            margin: auto;
        }
        .busquedas{
            flex-wrap: wrap;
        }
        .busqueda{
            width: 100%;
            margin: 10px 0;
        }
        .conteSelect{
            flex-wrap: wrap;
        }
    }
</style>