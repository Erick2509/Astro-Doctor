---
import Btn from "../Btn.astro"
---
<section>
    <div class="contenido">
        <h2>Skip the travel! Take Online</h2>
        <h1>Doctor <span>Consultation</span></h1>
        <p>Connect instantly with a 24x7 specialist or choose to video visit a particular doctor.</p>
        <div class="btnConsulta">
            <a href="#"><Btn>Consulta Ahora</Btn></a>
        </div>
    </div>
    <div class="img">
        <img src="/public/img/doctores.webp" alt="Doctores">
    </div>
</section>
<style>
    section{
        width: 80%;
        position: relative;
        height: 100vh;
        margin: 30px auto;
        display: flex;
    }
    .contenido h2{
        font-size: 31px;
        margin: 20px 0 0 0  ;
    }
    .contenido h1{
        font-size: 56px;
        margin: 5px 0;
    }
    .contenido h1 span{
        color: #2AA7FF;
    }
    .contenido p{
        color: #5C6169;
        font-size: 20px;
        margin: 20px 0 50px 0;
    }
    .btnConsulta a{
        text-decoration: none;
    }
    .img img{
        width: 100%;
        filter: drop-shadow(
            0 0 10px rgba(0, 0, 0, .8)
        );
        opacity: 0;
        animation: aparecer 2s forwards;
    }
    @keyframes aparecer {
        from {
            opacity: 0;
            transform: translateX(30%);
        }
        to {
            opacity: 1;
        }
    }

    @media screen and (max-width: 1050px){
        section{
            flex-direction: column-reverse;
            margin: auto;
            padding: 100px 0;
            height: auto;
        }
        .contenido{
            text-align: center;
            padding-bottom: 20px;
            background-color: #FFFFFF;
            border-radius: 5PX;
            opacity: 0.8;
            transform: translateY(-150px);
            z-index: 1;
        }



        
    }


</style>